{
    "name": "NamUs Case Tracker",
    "version": "0.1",
    "manifest_version": 3,
    "description": "Monitor and organize missing persons cases from NamUs. View case details in a side panel, save cases of interest, and track updates.",
    "permissions": [
        "sidePanel",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://www.namus.gov/*"
    ],
    "action": {
        "default_title": "NamUs Case Tracker",
        "default_icon": {
            "16": "icons/icon16.png",
            "24": "icons/icon24.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "64": "icons/icon64.png",
            "96": "icons/icon96.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "24": "icons/icon24.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "96": "icons/icon96.png"
    },
    "side_panel": {
        "default_path": "sidepanel/index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.namus.gov/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "https://www.namus.gov/*"
            ]
        }
    ]
}